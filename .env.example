# ==============================================
# CONFIGURACIÓN DE ENDURAIN - VARIABLES DE ENTORNO
# ==============================================

# ==============================================
# BASE DE DATOS
# ==============================================
DB_TYPE=postgres
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=endurain
DB_USER=endurain
DB_PASSWORD=changeme123

# ==============================================
# SEGURIDAD (CAMBIAR OBLIGATORIAMENTE EN PRODUCCIÓN)
# ==============================================
# Clave secreta para JWT (generar con: openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-change-in-production

# Clave Fernet para encriptación (generar con: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FERNET_KEY=your-fernet-key-32-chars-long-change

# ==============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ==============================================
ENDURAIN_HOST=http://localhost:8080
ENVIRONMENT=development
TZ=UTC

# Configuración de tokens JWT
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Protocolo del frontend (http/https)
FRONTEND_PROTOCOL=http

# ==============================================
# EMAIL (OPCIONAL - Para reset de contraseñas)
# ==============================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# ==============================================
# GEOCODING Y MAPAS
# ==============================================
REVERSE_GEO_PROVIDER=nominatim
REVERSE_GEO_RATE_LIMIT=1
PHOTON_API_HOST=photon.komoot.io
PHOTON_API_USE_HTTPS=true
NOMINATIM_API_HOST=nominatim.openstreetmap.org
NOMINATIM_API_USE_HTTPS=true
GEOCODES_MAPS_API=changeme

# ==============================================
# TRACING (OPCIONAL - Para monitoreo)
# ==============================================
JAEGER_ENABLED=false
JAEGER_HOST=jaeger
JAEGER_PORT=4317
JAEGER_PROTOCOL=http

# ==============================================
# INTEGRACIONES EXTERNAS (OPCIONAL)
# ==============================================
# Strava
STRAVA_CLIENT_ID=
STRAVA_CLIENT_SECRET=

# Garmin Connect
GARMIN_EMAIL=
GARMIN_PASSWORD=

# ==============================================
# DIRECTORIOS (OPCIONAL - Usar valores por defecto)
# ==============================================
BACKEND_DIR=/app/backend
FRONTEND_DIR=/app/frontend/dist
DATA_DIR=/app/backend/data
LOGS_DIR=/app/backend/logs
FILES_DIR=/app/backend/data/activity_files
ACTIVITY_MEDIA_DIR=/app/backend/data/activity_media